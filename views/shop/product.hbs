			<div class="col-xl-9 col-lg-8 col-md-7">
				<div class="row">
					{{#each product}}
					<!-- single product -->
					<div class="col-lg-4 col-md-6">
						<div class="single-product">
							<div class="image">
								<figure>
									<a href="/detail/{{this._id}}">
										<img src="/upload/{{this.image}}" alt="">
									</a>
								</figure>

							</div>
							<div class="product-details">
								<div class="row d-flex mb-2">
									<div class="col-8 align-items-center ">
										<a href="/detail/{{this._id}} ">
											<div class="bases__font--16">{{this.name}}</div>
										</a>
									</div>
									<div class="align-items-center">
										<h6 class="text-danger bases__text-bold">{{this.price}}đ</h6>
									</div>
								</div>

								<div class="star text-center mb-3">
									<div class="tt-rating">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
									</div>
								</div>
								<div class="row ">
									<a href="/addToCart/{{this._id}}" class="ml-2">
										<button class="bases__btn btn-round-cart justify-content-center ml-1">
											<i class="fas fa-shopping-cart"></i>
											Thêm vào giỏ hàng
										</button>
									</a>
								</div>
							</div>
						</div>
					</div>
					{{/each}}
				</div>

				<!-- End Best Seller -->
			</div>
		</div>
		<div class="row justify-content-end  mt-4">
			<nav aria-label="Page navigation example ">
				<ul class="pagination justify-content-center">
					{{#if currentPage}}
					<li class="page-item">
						<a class="page-link" href="/product?page={{previousPage}}" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
							<span class="sr-only">Previous</span>
						</a>
					</li>
					{{/if}}
					{{#if hasPreviousPage }}
					<li class="page-item"><a class="page-link"
							href="/product?page={{previousPage}}">{{previousPage}}</a>
					</li>
					{{/if}}
					<li class="page-item active"><a class="page-link" href="javascript:void(0)"
							tabindex="-1">{{current}}</a>
					</li>
					{{#if hasNextPage}}
					<li class="page-item"><a class="page-link" href="/product?page={{nextPage}}">{{nextPage}}</a>
					</li>
					{{/if}}
					{{#if next  }}
					<li class="page-item">
						<a class="page-link" href="/product?page={{nextPage}}" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
							<span class="sr-only">Next</span>
						</a>
					</li>
					{{/if}}
				</ul>
			</nav>
		</div>
	</div>
</div>
<script type="text/javascript" src="javascripts/filter.js"></script>
<script src="/js/jquery.js"></script>
<script>
	function myFunction() {
		document.getElementById("myDropdown").classList.toggle("show");
	}

	function filterFunction() {
		var input, filter, ul, li, a, i;
		input = document.getElementById("myInput");
		filter = input.value.toUpperCase();
		div = document.getElementById("myDropdown");
		a = div.getElementsByTagName("a");
		for (i = 0; i < a.length; i++) {
			txtValue = a[i].textContent || a[i].innerText;
			if (txtValue.toUpperCase().indexOf(filter) > -1) {
				a[i].style.display = "";
			} else {
				a[i].style.display = "none";
			}
		}
	}
</script>