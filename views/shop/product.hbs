				{{!-- <form action="" method="GET"> --}}
					<div class="dropdown">
						<button onclick="myFunction()" class="bases__btn btn-dropdown ">Danh mục <i
								class="fas fa-chevron-circle-down ml-2"></i></button>
						<div id="myDropdown" class="dropdown-content">
							<input type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()">
							<a href="/product">Tất cả sản phẩm</a>
							{{#each cate}}
							<a href="/cate/{{this.name}}.{{this._id}}">{{this.name}}</a>
							{{/each}}
						</div>
					</div>
					{{!-- <div class="tt-collapse open">
						<h3 class="tt-collapse-title">Lọc theo giá</h3>
