<div class="pages__mainuser">
	<div class="d-flex align-items-center">
		<div class="row col-8">
			<div class="text-center">
				<div class="section-title">
					<h1 class="bases__text-bold">Danh sách sản phẩm </h1>
				</div>
			</div>
		</div>
		<div class="row col-4">
			<div class="">
				<form class="" method="GET">
					<select name="orderby" class="select-order" onchange="this.form.submit()">
						<option value="" selected disabled hidden> {{sort_value}} </option>
						<option value="1">Giá từ thấp tới cao</option>
						<option value="-1">Giá từ cao tới thấp</option>

					</select>
				</form>
			</div>
			<div class="">
				<form method="POST" action="/?">
					<select name="numItems" onchange="this.form.submit()" class="select-number">
						<option value="" selected disabled hidden> {{perPage}} </option>
						<option value="8">8</option>
						<option value="12">12</option>
						<option value="16">16</option>
						<option value="32">32</option>
						<option value="1000">Tất cả</option>
					</select>
				</form>

			</div>
		</div>
	</div>
	<section class="owl-carousel active-product-area section_gap">
		<div class="single-product-slider">
			<div class="container">
				<div class="row  justify-content-center">
					<div class="col-sm-6 ">
						<div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
							{{successMsg}}
						</div>
					</div>
				</div>
				<div class="row ">
					{{#each products}}
					<div class="products">
						<div class="main-product">
							<a href="/detail/{{this._id}}">
								<img class="img" src="/upload/{{this.image}}" alt="">
							</a>
							<div class="content-product">
								<a href="/detail/{{this._id}}">
									<div class="title">{{this.name}}
									</div>
								</a>
								<div class="star">
									<div class="tt-rating">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
									</div>
								</div>

								<div class="bottom d-flex ">
									<div class="bottom-price">
										<span class="money bases__font--20">{{this.price}}đ</span>
									</div>
									<div>
										<a href="/addToCart/{{this._id}}">
											<button type="button" class="bottom-cart">
												<i class="bases__font--12 fas fa-shopping-cart ml-1"></i>
												<span class="bases__font--16 mr-1">Thêm vào giỏ</span>
											</button>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					{{/each}}

				</div>
				<div class="row justify-content-center  mt-4">
					<nav aria-label="Page navigation example ">
						<ul class="pagination justify-content-center">
							{{#if currentPage}}
							<li class="page-item">
								<a class="page-link" href="/?page={{previousPage}}" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
									<span class="sr-only">Previous</span>
								</a>
							</li>
							{{/if}}
							{{#if hasPreviousPage }}
							<li class="page-item"><a class="page-link"
									href="/?page={{previousPage}}">{{previousPage}}</a>
							</li>
							{{/if}}
							<li class="page-item active"><a class="page-link" href="javascript:void(0)"
									tabindex="-1">{{current}}</a>
							</li>
							{{#if hasNextPage}}
							<li class="page-item"><a class="page-link" href="/?page={{nextPage}}">{{nextPage}}</a>
							</li>
							{{/if}}
							{{#if next  }}
							<li class="page-item">
								<a class="page-link" href="/?page={{nextPage}}" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
									<span class="sr-only">Next</span>
								</a>
							</li>
							{{/if}}
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</section>
</div>
<script src="js/jquery.js"></script>
<script>
	Handlebars.registerHelper('selected', function (option, value) {
		if (option === value) {
			return ' selected';
		} else {
			return ''
		}
	});

</script>