                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tên Thể Loại</th>
                                                    <th>Hình Ảnh</th>
                                                    <th>Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each data}}
                                                <tr>
                                                    <td>1</td>
                                                    <td>{{name}}</td>
                                                    <td>
                                                        <img class="img-thumbnail img-preview "
                                                            src="../../upload/{{imgCate}}" title="Hình ảnh" width="100"
                                                            height="100">
                                                    </td>
                                                    <td>
                                                        <a href="/admin/cate/{{this._id}}/delete"
                                                            class="bg-danger"  onclick="return confirm('Are you sure to delete this item?')" >Xoá</a> |
                                                        <a href="/admin/cate/{{this._id}}/edit"
                                                            class="bg-primary">Sửa</a>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                        <!-- ********************************************** -->
