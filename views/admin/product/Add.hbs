        <section id="main-content" class=" ">
            <section class="wrapper main-wrapper row" style=''>
                <div class='col-xs-12'>
                    <div class="page-title">
                        <div class="pull-left">
                            <h1 class="title">Thêm Sản Phẩm</h1>
                        </div>
                        <div class="pull-right hidden-xs">
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-xs-12">
                    <section class="box ">
                        <header class="panel_header">
                            <h2 class="title pull-left">Thông Tin</h2>
                            <div class="actions panel_actions pull-right">
                                <a class="box_toggle fa fa-chevron-down"></a>
                                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                <a class="box_close fa fa-times"></a>
                            </div>
                        </header>
                        <div class="content-body">
                            <div class="row">
                                {{#if success_msg }}
                                <div class="alert alert-info">
                                    <p>{{success_msg}}</p>
                                </div>
                                {{/if}}
                                {{#if hasErrors}}
                                <div class="alert alert-info">
                                    {{#each messages}}
                                    <p>{{this}}</p>
                                    {{/each}}
                                </div>
                                {{/if}}
                                <form action="./add" method="POST" enctype="multipart/form-data">
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Thể Loại</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <select class="form-control" name="category">
                                                    {{#each cate}}
                                                    <option value="{{this._id}}">{{name}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="name">Tên sản phẩm</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="text" id="name" value="" class="form-control" name="name"
                                                    required="required">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="img">Hình</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="file" id="image" value="" required="required"
                                                    class="form-control" name="image">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Giá (vnđ)</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <input type="number" id="price" value="0" min="0" class="form-control"
                                                    name="price">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Loại mua</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <textarea name="typeBuy" id="description" class="form-control autogrow"
                                                    cols="5" rows="1"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Chi Tiết Sản Phẩm</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <textarea name="description" id="description"
                                                    class="form-control autogrow" cols="5" rows="6"
                                                    maxlength="255"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Lưu trữ</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <textarea name="storage" id="storage" class="form-control autogrow"
                                                    cols="5"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="form-group">
                                            <label class="form-label" for="field-120334">Nguồn Gốc Xuất Xứ</label>
                                            <span class="desc"></span>
                                            <div class="controls">
                                                <textarea name="origin" id="origin" class="form-control autogrow"
                                                    cols="5"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                        <div class="text-left">
                                            <button type="submit" class="btn btn-info">Lưu</button>
                                            <a href="/admin/product/List" type="button" class=" btn">Quay Lại</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
